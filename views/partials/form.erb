<form action = "/<%= @show.id %>" method="POST">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @show.title %>">
  </div>
  <div>
    <label>Body</label>
    <textarea name="body" rows="8" cols="40" placeholder="The body of the show"><%= @show.body %></textarea>
  </div>
  <div>
    <input type="submit" value="Save show">
  </div>

  <% if(@tvshow.id != "") %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
